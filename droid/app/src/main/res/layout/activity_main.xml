<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".views.MainActivity">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="85dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/readingItemReadingValue"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="79dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="1dp"
                    android:text="Ultime letture"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintBottom_toTopOf="@+id/rv"
                    app:layout_constraintEnd_toStartOf="@+id/title1"
                    app:layout_constraintHorizontal_bias="0.202"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/readingItemReadingValue3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="79dp"
                    android:layout_marginTop="24dp"
                    android:elevation="1dp"
                    android:text="Bentornato Fabio!"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintEnd_toStartOf="@+id/title1"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/readingItemReadingValue2"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="79dp"
                    android:layout_marginBottom="9dp"
                    android:elevation="1dp"
                    android:text="Andamento"
                    android:textColor="@color/colorBlack"
                    android:textSize="22sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintBottom_toTopOf="@+id/graph"
                    app:layout_constraintEnd_toStartOf="@+id/title1"
                    app:layout_constraintHorizontal_bias="0.195"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="1dp"
                    android:text="vedi tutte >"
                    android:textColor="@color/colorLightGray"
                    android:textSize="18sp"
                    app:fontFamily="@font/product_sans_bold"
                    app:layout_constraintBottom_toTopOf="@+id/rv"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toTopOf="@+id/readingItemReadingValue2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent">

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/bottomAppBar"
                app:navigationIcon="@drawable/ic_menu"
                style="@style/Widget.MaterialComponents.BottomAppBar"
                android:layout_gravity="bottom" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@null"
                app:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_gplus"
                app:layout_anchor="@id/bottomAppBar"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>
