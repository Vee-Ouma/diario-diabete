<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?appColorDarkAzure</item>
        <item name="colorPrimaryDark">?appColorDarkAzure</item>
        <item name="colorAccent">?appColorDarkAzure</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="appColorBlack">#000000</item>
        <item name="appColorLightAzure">#E5F3FA</item>
        <item name="appColorDarkAzure">#1B3667</item>
        <item name="appColorLightGreen">#B8D4AE</item>
        <item name="appColorOrange">#FFFFFF</item>
        <item name="appColorWhite">#FFFFFF</item>
        <item name="appColorGray">#6D7478</item>
        <item name="appBottomAppBar">#FFFFFF</item>
    </style>

    <style name="PreferenceScreenDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">#FAFAFC</item>
        <item name="android:textColorSecondary">#FAFAFC</item>
        <item name="android:textColorTertiary">#FAFAFC</item>
        <item name="colorAccent">#FAFAFC</item>
        <item name="android:textColor">#FAFAFC</item>
        <item name="android:subtitleTextColor">#FAFAFC</item>
    </style>


    <style name="PreferenceScreenLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">#121212</item>
        <item name="android:textColorSecondary">#121212</item>
        <item name="android:textColorTertiary">#121212</item>
        <item name="colorAccent">#121212</item>
        <item name="android:textColor">#121212</item>
        <item name="android:subtitleTextColor">#121212</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_white_button</item>
    </style>

    <!-- Dark application theme. -->
    <!-- TODO: improve colors using defaults colors guide: https://material.io/develop/android/theming/color/ -->
    <style name="AppDarkTheme" parent="AppTheme">
        <item name="colorPrimary">?appColorWhite</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="appColorBlack">#FAFAFC</item>
        <item name="appColorLightAzure">#F2EFE1</item>
        <item name="appColorDarkAzure">#E1E1E1</item>
        <item name="appColorLightGreen">#B8D4AE</item>
        <item name="appColorOrange">#1E1E1E</item>
        <item name="appColorWhite">#121212</item>
        <item name="appColorGray">#B6B6B6</item>
        <item name="appBottomAppBar">#1E1E1E</item>
    </style>

</resources>
