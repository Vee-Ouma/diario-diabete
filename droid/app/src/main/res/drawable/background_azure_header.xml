<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorLightAzure"/>
            <stroke android:color="@color/colorLightAzure" android:width="1dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="25dp"
                android:bottomRightRadius="15dp" android:bottomLeftRadius="15dp"
                android:topLeftRadius="2dp" android:topRightRadius="0dp"/>
        </shape>
    </item>
</selector>